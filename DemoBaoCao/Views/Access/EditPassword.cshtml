@{
    ViewData["Title"] = "Edit Password";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@if (ViewData["Message"] != null)
{
    <div class="alert alert-success mt-3">@ViewData["Message"]</div>
    <script>
        if (window.alert('Đổi Pasword thành công, mời bạn đăng nhập lại')) { }
        else { window.location = '/Access/LogOut'; }

    </script>
}


<form asp-action="EditPassword" asp-controller="Access" method="post">
    <input type="hidden" name="email" value="@ViewData["Email"]" />
    <div style="display: flex; justify-content: center; align-items: center; height: 50vh;">
        <table style="width: 300px; border-collapse: collapse; border: 1px solid #ccc;">
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px; background-color: #f8f9fa;">
                    <h2 style="width: 100%;
                               padding: 6px;
                               font-size: 17px;
                               background-color: #4C2683;
                               background-image: linear-gradient(#4C2683, #E44298) !important;
                               font-style: normal;
                               font-weight: 700;
                               color: #fff;
                               border-radius: 5px;
                               text-transform: uppercase;
                               text-align: center;
                               margin-bottom: 1em;">
                        Đổi Password
                    </h2>
                </td>
            </tr>
            <tr>
                <td style="padding: 10px;">
                    <label for="newPassword">New Password:</label>
                </td>
                <td style="padding: 10px;">
                    <input type="password" class="form-control" id="NewPassword" name="NewPassword" required>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px;">
                    <button type="submit" class="btn btn-primary">Đồng Ý</button>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px;">
                    <a href="@Url.Action("Login", "Access")" class="btn btn-warning btn-sm">Quay Lại</a>
                </td>
            </tr>
        </table>
    </div>
</form>