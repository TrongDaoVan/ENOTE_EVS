@model DemoBaoCao.Models.DemoLogin;
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div style="background-image: url('@Url.Content("~/css/Images/9U2A1166_resize.JPG")'); background-size: cover; background-position: center; display: flex; justify-content: center; align-items: center; height: 100vh;">
        <form asp-action="Login" asp-controller="Access" method="post" style="width: 300px; padding: 20px; background-color: #f5f5f5; border-radius: 5px; box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);">
            <h1 style="text-align: center; color: #333;">Login</h1>
            <input type="email" placeholder="Email" asp-for="Email" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 3px;" />
            <input type="password" placeholder="Password" asp-for="Password" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 3px;" />

            <label style="display: flex; align-items: center; margin-bottom: 10px; color: #777;">
                <input type="checkbox" asp-for="KeepLoggedIn" />
                Nhớ mật khẩu
            </label>
            <button type="submit" style="width: 100%; padding: 10px; background-color: #007bff; border: none; color: #fff; cursor: pointer;">Login</button>
            <a asp-controller="Access" asp-action="CheckEmailAndPin" style="text-decoration: none; color: inherit;">Quên Mật Khẩu</a><br />
            <a asp-controller="Access" asp-action="NewAccount" method="get" style="text-decoration: none; color: inherit;">Chưa có tài khoản? Đăng ký</a>
            @if (ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <label style="color: #ff0000;">@ViewData["ValidateMessage"]</label>
            }
        </form>
       
    </div>
</body>
</html>

