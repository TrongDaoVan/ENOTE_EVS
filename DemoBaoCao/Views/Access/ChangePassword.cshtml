@{
}
@model DemoBaoCao.Models.DemoLogin

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

@if (!string.IsNullOrEmpty(ViewData["Message"] as string))
{
    <div class="alert alert-success">@ViewData["Message"]</div>
    <script>
        if (window.alert('Đổi Pasword thành công, mời bạn đăng nhập lại')) 
        {}
        else { window.location = '/Access/LogOut'; }
       
    </script>
}

<form method="post" asp-action="ChangePassword" asp-controller="Access">
    <div style="display: flex; justify-content: center; align-items: center; height: 50vh;">
        <table style="width: 300px; border-collapse: collapse; border: 1px solid #ccc;">
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px; background-color: #f8f9fa;">
                    <h2 style="width: 100%;
                               padding: 6px;
                               font-size: 17px;
                               background-color: #4C2683;
                               background-image: linear-gradient(#4C2683, #E44298) !important;
                               font-style: normal;
                               font-weight: 700;
                               color: #fff;
                               border-radius: 5px;
                               text-transform: uppercase;
                               text-align: center;
                               margin-bottom: 1em;">
                        Đổi mật khẩu
                    </h2>
                </td>
            </tr>
            <tr>
                <td style="padding: 10px;">
                    <label for="Password">Mật khẩu hiện tại:</label>
                </td>
                <td style="padding: 10px;">
                    <input type="password" class="form-control" id="Password" name="Password" required>
                </td>
            </tr>
            <tr>
                <td style="padding: 10px;">
                    <label for="newPassword">Mật khẩu mới:</label>
                </td>
                <td style="padding: 10px;">
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px;">
                    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                </td>
            </tr>
        </table>
    </div>
</form>

