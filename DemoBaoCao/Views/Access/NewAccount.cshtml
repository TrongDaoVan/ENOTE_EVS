@{
    Layout = null;
}
@model DemoLogin
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@if (!string.IsNullOrEmpty(ViewData["ValidateMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ValidateMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["ValidateMessage2"] as string))
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ValidateMessage2"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["ValidateMessage3"] as string))
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ValidateMessage3"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["Message"] as string))
{
    <div class="alert alert-success">@ViewData["Message"]</div>
    <script>
        if (window.alert('Tạo tài khoản thành công, Quay lại phần đăng nhập')) { }
        else { window.location = '/Access/LogOut'; }

    </script>
}

@using (Html.BeginForm())
{
    <form method="post" asp-action="NewAccount" asp-controller="Access">
    <div style="display: flex; justify-content: center; align-items: center; height: 50vh;">
        <table style="width: 300px; border-collapse: collapse; border: 1px solid #ccc;">
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px; background-color: #f8f9fa;">
                    <h2 style="width: 100%;
                               padding: 6px;
                               font-size: 17px;
                               background-color: #4C2683;
                               background-image: linear-gradient(#4C2683, #E44298) !important;
                               font-style: normal;
                               font-weight: 700;
                               color: #fff;
                               border-radius: 5px;
                               text-transform: uppercase;
                               text-align: center;
                               margin-bottom: 1em;">
                        Đăng Ký Tài Khoản
                    </h2>
                </td>
            </tr>
           <tr>
    <td style="padding: 10px;">
        <label for="Email">Email</label>
    </td>
    <td style="padding: 10px;">
        <input type="email" class="form-control" id="Email" name="Email" required>
        <span class="text-danger" data-valmsg-for="Email"></span>
    </td>
</tr>
<tr>
    <td style="padding: 10px;">
        <label for="Password">Mật khẩu</label>
    </td>
    <td style="padding: 10px;">
        <input type="password" class="form-control" id="Password" name="Password" required>
        <span class="text-danger" data-valmsg-for="Password"></span>
    </td>
</tr>
<tr>
    <td style="padding: 10px;">
        <label for="Password2">Xác nhận mật khẩu</label>
    </td>
    <td style="padding: 10px;">
        <input type="password" class="form-control" id="Password2" name="Password2" required>
        <span class="text-danger" data-valmsg-for="Password2"></span>
    </td>
</tr>
<tr>
    <td style="padding: 10px;">
        <label for="Pin">Mã PIN</label>
    </td>
    <td style="padding: 10px;">
        <input type="number" class="form-control" id="Pin" name="Pin" required>
        <span class="text-danger" data-valmsg-for="Pin"></span>
    </td>
</tr>
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px;">
                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center; padding: 10px;">
                    <a href="@Url.Action("Login", "Access")" class="btn btn-warning btn-sm">Quay Lại</a>
                </td>
            </tr>
        </table>
    </div>
</form>
}


